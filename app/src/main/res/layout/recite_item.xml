            <LinearLayout
                android:id="@+id/ll_anwer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="120dp"
                android:layout_marginTop="17dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="17dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="最佳解释"
                        android:textColor="@color/explain_color"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/is_wrong"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="(答题错误)"
                        android:textColor="@color/wrong_choice_color"
                        android:textSize="16sp"
                        android:visibility="gone" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_anwer_ok"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="3dp"
                        android:text="答案:"
                        android:textColor="@color/content_text_color"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/answer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/content_text_color"
                        android:textSize="18sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/answer_explain"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="17dp"
                    android:lineSpacingMultiplier="1.2"
                    android:textColor="@color/content_text_color"
                    android:textSize="16sp" />

                <LinearLayout
                    android:id="@+id/explain_pic1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
