<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.haha.exam.fragment.Appointment1Fragment">

    <!-- TODO: Update blank fragment layout -->
   <LinearLayout
       android:id="@+id/appoint_frag1_linear"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginStart="10dp"
       android:orientation="horizontal"
       >
       <ImageView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:src="@drawable/appointment_vsfv"/>
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_gravity="center"
           android:layout_marginLeft="7dp"
           android:textStyle="bold"
           android:text="@string/appointment_tuijian"/>
   </LinearLayout>
    <ListView
        android:id="@+id/appointment_tuijian_listview"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:layout_below="@id/appoint_frag1_linear"
        android:scrollbars="none"

        ></ListView>

</RelativeLayout>
