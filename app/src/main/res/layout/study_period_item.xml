<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:background="@drawable/order_item_background"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="时段："
                android:textColor="@color/black"
                android:textSize="@dimen/order_title" />

            <TextView
                android:id="@+id/period_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2016/10/10 09:00-10:00"
                android:textColor="@color/black"
                android:textSize="@dimen/order_title" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/time_study_order_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单号："
                android:textColor="@color/black"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/period_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00000000"
                android:textColor="@color/black"
                android:textSize="@dimen/order_title" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="教练：" />

            <TextView
                android:id="@+id/period_coachname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="邓从兵" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="科目：" />

            <TextView
                android:id="@+id/period_subject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="科目二" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="训练场地：" />

            <TextView
                android:id="@+id/period_xunlianchangdi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="万正场地" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="训练车：" />

            <TextView
                android:id="@+id/period_carnum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="鲁N11111" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="140dp"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/period_picshow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/period_background"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/period_pic" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/period_guijishow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/period_background"
                android:orientation="horizontal"
                android:padding="5dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/period_guiji" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>