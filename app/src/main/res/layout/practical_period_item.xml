<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:background="@drawable/order_item_background"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="3dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="时段："
                android:textColor="@color/black"
                android:textSize="@dimen/order_title" />

            <TextView
                android:id="@+id/practice_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2016/10/10 09:00-10:00"
                android:textColor="@color/black"
                android:textSize="@dimen/order_title" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="3dp">

            <TextView
                android:id="@+id/time_study_order_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单号："
                android:textColor="@color/black"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/period_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00000000"
                android:textColor="@color/black"
                android:textSize="@dimen/order_title" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="3dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用时:" />

            <TextView
                android:id="@+id/practice_usetime"
                android:layout_width="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_height="wrap_content"
                android:text="30秒" />

            <TextView
                android:id="@+id/remark"
                android:textColor="@color/wrong_choice_color"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="120dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_practice"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="3dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="视频内容:" />

            <TextView
                android:id="@+id/practice_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/ll_exam"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone"
            android:padding="3dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="成绩:" />

            <TextView
                android:id="@+id/exam_result"
                android:layout_marginStart="40dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="90分" />

            <TextView
                android:id="@+id/assess"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="150dp"
                android:layout_alignParentEnd="true"
                android:text="恭喜通过"
                android:textColor="@color/right_choice_color" />
        </RelativeLayout>


        <LinearLayout
            android:id="@+id/practice_picshow"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:background="@drawable/period_background"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/period_pic" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>