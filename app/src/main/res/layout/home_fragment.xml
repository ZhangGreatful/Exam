<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/mine_head_background"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/have_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/up_background">

        <LinearLayout
            android:id="@+id/tab_layout"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tab1"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="科一"
                android:textColor="@drawable/text_color" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/short_divider" />

            <TextView
                android:id="@+id/tab2"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="科四"
                android:textColor="@drawable/text_color" />

        </LinearLayout>

        <View
            android:id="@+id/tab_line"
            android:layout_width="100dp"
            android:layout_height="2dp"
            android:layout_below="@id/tab_layout"
            android:layout_marginLeft="40dp"
            android:background="@mipmap/bottom_line" />

        <LinearLayout
            android:id="@+id/space"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/mine_head_background"
            android:layout_below="@+id/tab_line"
            android:orientation="horizontal" />

        <android.support.v4.view.ViewPager
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/space" />
    </RelativeLayout>
</LinearLayout>